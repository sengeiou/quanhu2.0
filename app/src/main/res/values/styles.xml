<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底部导航栏文字样式 -->
    <style name="TabBottomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/px34</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- listview的样式 -->
    <style name="ListViewStyle">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@drawable/child_bg</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

</resources>
