<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="BaseAppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--取消5.0以上button陰影效果-->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="BaseAppTheme.FullScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowBackground">@drawable/</item>-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme.Translucent" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- 底部导航栏文字样式 -->
    <style name="TabBottomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/px34</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- listview的样式 -->
    <style name="ListViewStyle">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@drawable/child_bg</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!--默认listview样式-->
    <style name="DefaultLvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/color_e7e7e7</item>
        <item name="android:dividerHeight">@dimen/px1</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="comment_dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 显示对话框时当前的屏幕是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--通用button样式-->
    <style name="DefaultBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/px45</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="PersonInfoLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/comm_item_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/px30</item>
        <item name="android:paddingBottom">@dimen/px30</item>
        <item name="android:paddingLeft">@dimen/px40</item>
        <item name="android:paddingRight">@dimen/px40</item>
    </style>

    <style name="PersonInfoTitleTvStyle" parent="DefaultTvStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_50</item>
    </style>

    <style name="PersonInfoDescTvStyle" parent="DefaultTvStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/px15</item>
        <item name="android:layout_marginLeft">@dimen/px15</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/font_50</item>
    </style>

    <style name="DefaultArrowRightStyle">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/ic_right_arrow</item>
        <item name="android:layout_marginLeft">@dimen/px28</item>
    </style>

    <style name="GridPasswordView"/>

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="LoginEtStyle">
        <item name="android:textColorHint">@color/color_666666</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font_44</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
