<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/px44"
              android:paddingRight="@dimen/px44"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/edit_collection_no"
            android:layout_marginRight="@dimen/font_44"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:id="@+id/ll_answer_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_44"
            android:textColor="@color/color_0185FF"
            android:layout_marginRight="@dimen/font_34"
            android:text="我想静静"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问"
            android:textSize="@dimen/font_44"
            android:layout_marginRight="@dimen/font_34"
            android:textColor="@color/color_333"
            />
        <TextView
            android:id="@+id/answer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_44"
            android:textColor="@color/color_0185FF"
            android:text="一轮明月"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/answer_title"
        android:layout_marginTop="@dimen/font_44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_44"
        android:textColor="@color/color_333333"
        android:maxLines="2"
        android:text="求纯正发育是是"

        />
    <TextView
        android:id="@+id/audio_tv"
        android:layout_width="@dimen/px562"
        android:layout_height="@dimen/px116"
        android:layout_marginTop="@dimen/font_44"
        android:background="@drawable/answer_bg"
        android:paddingLeft="@dimen/px44"
        android:drawableLeft="@drawable/voice_icon"
        />
    <LinearLayout
        android:id="@+id/answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/answer_content"
        android:layout_marginTop="@dimen/font_44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_44"
        android:textColor="@color/color_000000"
        android:maxLines="3"
        android:text="求纯正发育是是盛大发售的发生的发生的发顺丰"

        />
    <ImageView
        android:id="@+id/iv_answer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px446"
        android:layout_marginTop="@dimen/px30"
        android:layout_marginBottom="@dimen/px34"
        android:scaleType="fitXY"
        android:background="@color/color_666666"
        />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/answer_from"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圈子"
        />

</RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>