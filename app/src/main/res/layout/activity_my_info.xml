                <!--android:lines="1"-->
                <!--android:maxEms="15"/>-->

            <!--<ImageView-->
                <!--android:id="@+id/id_right_arrow6"-->
                <!--android:layout_width="@dimen/px27"-->
                <!--android:layout_height="@dimen/px45"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:src="@drawable/ic_right_arrow"/>-->

        <!--</RelativeLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2"
                android:background="@color/color_EEEEEE"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/id_layout_person_brief"
            style="@style/PersonInfoLineStyle"
            android:layout_height="@dimen/px200"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/id_text_brief"
                style="@style/PersonInfoTitleTvStyle"
                android:text="@string/mine_person_brief"/>

            <TextView
                android:id="@+id/id_desc"
                style="@style/PersonInfoDescTvStyle"
                android:layout_toLeftOf="@+id/id_right_arrow7"
                android:layout_toRightOf="@+id/id_text_brief"
