<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comm_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_friends_img"
        android:layout_width="@dimen/px98"
        android:layout_height="@dimen/px98"
        android:layout_margin="10dp"
        android:layout_marginLeft="@dimen/px30"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_head" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="@dimen/px30">

        <TextView
            android:id="@+id/id_friends_name"
            style="@style/DefaultTvStyle"
            android:textColor="@color/black"
            android:textSize="@dimen/font_50" />

        <TextView
            android:id="@+id/id_friends_brief"
            style="@style/DefaultTvStyle"
            android:layout_marginTop="@dimen/px10"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px38" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_state"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/px30">

        <TextView
            android:id="@+id/id_friends_state"
            style="@style/DefaultTvStyle"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_btn_blue"
            android:paddingBottom="@dimen/px15"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:paddingTop="@dimen/px15"
            android:textColor="@color/white"
            android:textSize="@dimen/font_40" />
    </FrameLayout>
</LinearLayout>