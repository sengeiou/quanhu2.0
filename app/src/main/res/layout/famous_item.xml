<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/px316"
        android:layout_height="@dimen/px402"
        android:layout_marginLeft="@dimen/px24"
        android:background="@drawable/hot_famous_bg"
        >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="@dimen/px172"
            android:layout_height="@dimen/px172"
            android:layout_marginTop="@dimen/px60"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/famous_iv"
                android:layout_width="@dimen/px172"
                android:layout_height="@dimen/px172"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/famous_level"
                android:layout_width="@dimen/px72"
                android:layout_height="@dimen/px34"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/famous_level_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/px25"
                android:gravity="center"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px125"
            android:layout_below="@+id/rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px30"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/famous_name"
                android:layout_width="@dimen/px260"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="是逻辑封杀了"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/px46"/>

            <TextView
                android:id="@+id/famous_mark"
                android:layout_width="@dimen/px370"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="老师地脚螺栓"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/px34"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>