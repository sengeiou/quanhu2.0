<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/px376"
        android:layout_height="@dimen/px402"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginTop="@dimen/px42"
        android:background="@drawable/hot_famous_bg"
        >
        <ImageView
            android:id="@+id/famous_iv"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/px60"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/px145"
            android:layout_height="@dimen/px145"/>
        <LinearLayout
            android:layout_below="@+id/famous_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px125"
            android:gravity="center_horizontal"
            android:orientation="vertical">
          <TextView
              android:id="@+id/famous_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:maxLines="1"
              android:text="是逻辑封杀了"
              android:gravity="center"
              android:textColor="@color/color_000000"
              android:textSize="@dimen/px43" />
            <TextView
                android:id="@+id/famous_mark"
                android:layout_width="@dimen/px370"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="老师地脚螺栓"
                android:gravity="center"
                android:textSize="@dimen/px38"
                android:textColor="@color/color_999" />

        </LinearLayout>
        
    </RelativeLayout>


</LinearLayout>