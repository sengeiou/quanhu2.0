        <TextView
            android:id="@+id/id_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minEms="10"
            android:padding="@dimen/px70"
            android:text="@string/video_upload_failed"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/font_52"/>

        <View
            style="@style/line_horizontal_gray_s"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_pop_gray_btn"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/px30"
                android:text="@string/retry_upload"
                android:textColor="@color/color_main"
