<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/px44"
    android:layout_marginRight="@dimen/px44"
    android:layout_alignParentBottom="true"
    >
    <TextView
        android:id="@+id/copy_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="保存图片"
        android:textSize="@dimen/font_44"
        android:textColor="@color/color_999999"
        android:textStyle="bold"
        android:background="@drawable/shape_white_bg_stroke"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        />
    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_44"
        android:textStyle="bold"
        android:background="@drawable/shape_white_bg_stroke"
        />
</LinearLayout>