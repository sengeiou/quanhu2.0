<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/color_f5f5f5">

    <RelativeLayout
        android:id="@+id/id_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px100"
        android:layout_marginRight="@dimen/px100"
        android:layout_marginTop="@dimen/px86"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px108"
            android:background="@drawable/scan_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_scan_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px152"
                android:text="@string/mine_person_ex1"
                android:textColor="@color/color_0185FF"
                android:textSize="@dimen/font_48"/>

            <TextView
                android:id="@+id/id_scan_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px25"
                android:text="@string/mine_person_ex2"
                android:textColor="@color/color_999"
                android:textSize="@dimen/font_40"/>

            <ImageView
                android:id="@+id/id_scan_scan"
                android:layout_width="@dimen/px574"
                android:layout_height="@dimen/px574"
                android:layout_marginTop="@dimen/px126"
                android:src="@drawable/ic_height_bg"/>

            <TextView
                android:layout_width="@dimen/px574"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px86"
                android:layout_marginTop="@dimen/px126"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/px15"
                android:text="@string/mine_person_ex7"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/px45"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/id_scan_photo"
            android:layout_width="@dimen/px216"
            android:layout_height="@dimen/px216"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</RelativeLayout>