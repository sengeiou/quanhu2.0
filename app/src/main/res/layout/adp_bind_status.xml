<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px188"
    android:paddingLeft="@dimen/px30"
    android:paddingRight="@dimen/px30">

    <ImageView
        android:id="@+id/id_way_img"
        android:layout_width="@dimen/px118"
        android:layout_height="@dimen/px118"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px44"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/id_way_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_way_name_txt"
            style="@style/DefaultTvStyle"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:paddingTop="@dimen/px10"
            android:textSize="@dimen/font_52" />

        <TextView
            android:id="@+id/id_way_id_txt"
            style="@style/DefaultTvStyle"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_44" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_band_status_txt"
        android:layout_width="@dimen/px130"
        android:layout_height="@dimen/px80"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_44" />
</RelativeLayout>