<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_more_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px58"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px98"
            android:src="@drawable/ic_default_head_new" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_34"
                android:textColor="@color/color_666666"
                android:layout_gravity="center"
                android:text="小李"
                android:textSize="@dimen/font_44" />
        </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px34"
    android:text="7月25日光谷国际广场B座1129将开展正式湖东,湖东会邀请大名鼎鼎湖畔花园夏雨荷过来演讲如何月入百万"
    android:textColor="@color/color_000000"
    android:textStyle="bold"
    android:maxLines="2"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_34"
        android:text="活动时间:2017年八月32日"
        android:textColor="@color/color_666666"
        android:maxLines="2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:text="活动地址:光谷国际广场光谷步行街光谷天地"
        android:textColor="@color/color_666666"
        android:maxLines="2"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/px30"
        android:layout_marginBottom="@dimen/px34"
        android:background="@color/color_666666"
        />
    <LinearLayout
        android:id="@+id/ll_more_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/px34"
        android:orientation="horizontal">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:textColor="@color/color_999999"
          android:text="129讨论"
          />
        <TextView
            android:id="@+id/tv_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:layout_gravity="center"
            android:text="来自四圈旅游及机器号"
            android:layout_marginRight="@dimen/font_34"
            android:textSize="@dimen/font_44" />
    </LinearLayout>
</LinearLayout>