<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="@dimen/app_base_padding"
        android:src="@mipmap/ic_invite_scan_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_invite_reward_tip_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_invite_scan_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/app_base_padding">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/px176"
                android:layout_height="@dimen/px176"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_default_avatar_big"
                app:riv_oval="true"
                app:riv_tile_mode="clamp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_base_padding"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/font_gray_l"
                android:textSize="@dimen/font_48"
                tools:text="这里的是昵称" />
        </LinearLayout>

        <View style="@style/line_horizontal_gray_s" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/px574"
            android:layout_height="@dimen/px574"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/px72" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96"
            android:layout_marginBottom="@dimen/px72"
            android:layout_marginLeft="@dimen/px96"
            android:layout_marginRight="@dimen/px96"
            android:background="@drawable/shape_round_main"
            android:gravity="center"
            android:text="保存到相册去分享"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_44" />
    </LinearLayout>
</LinearLayout>