<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comm_item_selector"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/id_icon_img"
            android:layout_width="@dimen/px46"
            android:layout_height="@dimen/px46"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px40"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/id_name_txt"
            style="@style/MineMeTvStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px26"
            android:layout_toRightOf="@+id/id_icon_img"
            android:textColor="@color/black"
            android:textSize="@dimen/px50"/>

        <TextView
            android:id="@+id/id_contact_num_update"
            style="@style/DefaultTvStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px15"
            android:layout_toLeftOf="@+id/id_right"
            android:background="@drawable/unread_count_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/px30"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/id_remark"
            style="@style/MineMeTvStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30"
            android:layout_toLeftOf="@+id/id_right"
            android:text="12344444"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px44"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/version_update"
            style="@style/SettingImgStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px15"
            android:layout_toLeftOf="@+id/id_right"
            android:background="@mipmap/red"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/id_right"
            android:layout_width="@dimen/px30"
            android:layout_height="@dimen/px46"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px40"
            android:background="@drawable/ic_right_arrow"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    </RelativeLayout>

    <View
        android:id="@+id/id_divider_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:background="#F5F5F5"
        android:visibility="gone"/>

    <View
        android:id="@+id/id_line_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px3"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:background="#EEEEEE"
        android:visibility="gone"/>
</LinearLayout>