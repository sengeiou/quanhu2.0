<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px270">

            <ImageView
                android:id="@+id/iv_voice_record"
                android:layout_width="@dimen/px375"
                android:layout_height="@dimen/px375"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/px70"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_record"/>

            <ImageView
                android:id="@+id/iv_voice_record_gif"
                android:layout_width="@dimen/px430"
                android:layout_height="@dimen/px430"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/px15"
                android:scaleType="fitCenter"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_voice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_start_record"
            android:textColor="@color/font_gray_xl"
            android:textSize="@dimen/font_54"/>

        <TextView
            android:id="@+id/tv_voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40"
            android:textColor="@color/font_gray_m"
            android:textSize="@dimen/font_46"/>

        <TextView
            android:id="@+id/tv_voice_re_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px110"
            android:background="@drawable/shape_ring_blue"
            android:paddingBottom="@dimen/px35"
            android:paddingLeft="@dimen/px110"
            android:paddingRight="@dimen/px110"
            android:paddingTop="@dimen/px35"
            android:textColor="@color/font_color_blue"
            android:textSize="@dimen/font_46"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_voice_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px140"
        android:drawableLeft="@mipmap/icon_record_change_text"
        android:drawablePadding="@dimen/px14"
        android:text="@string/change_text_answer"
        android:textColor="@color/font_color_blue"
        android:textSize="@dimen/font_48"
        android:visibility="gone"/>
</LinearLayout>