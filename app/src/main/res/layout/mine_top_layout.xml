<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    android:background="@color/white"
    android:orientation="horizontal"
    android:id="@+id/reward_top_layout"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px10"
        >

        <TextView
            android:id="@+id/my_create_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_create_reward_txt"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px154"
            android:background="@drawable/shape_blue_bg_stroke"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:paddingTop="@dimen/px10"
            android:paddingBottom="@dimen/px10"
            android:textColor="@color/tab_blue"
            />

        <TextView
            android:id="@+id/answer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_answer_reward_txt"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px154"
            android:background="@drawable/shape_white_bg_stroke"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:paddingTop="@dimen/px10"
            android:paddingBottom="@dimen/px10"
            />

    </RelativeLayout>

</LinearLayout>