<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sv_card_coupons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_base_padding"
        android:paddingRight="@dimen/app_base_padding">

        <com.rz.common.widget.MyListView
            android:id="@+id/lv_card_coupons_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_base_padding"
            android:layout_marginTop="@dimen/app_base_padding"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/app_base_padding"
            android:listSelector="@color/transparent">

        </com.rz.common.widget.MyListView>

        <LinearLayout
            android:id="@+id/ll_card_coupons_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/px1"
                android:layout_weight="1"
                android:background="@color/line_gray_s"/>

            <TextView
                android:id="@+id/tv_card_coupons_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15"
                android:paddingRight="@dimen/px15"
                android:text="@string/used_coupons_hint"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/px1"
                android:layout_weight="1"
                android:background="@color/line_gray_s"/>

        </LinearLayout>

        <com.rz.common.widget.MyListView
            android:id="@+id/lv_card_coupons_expired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_base_padding"
            android:layout_marginTop="@dimen/app_base_padding"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/app_base_padding"
            android:listSelector="@color/transparent">

        </com.rz.common.widget.MyListView>


    </LinearLayout>


</ScrollView>
