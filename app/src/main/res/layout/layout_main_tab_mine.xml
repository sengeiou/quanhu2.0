<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_bottom_img_size"
            android:layout_height="@dimen/tab_bottom_img_size"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/tab_bottom_img_margin_tv"
            android:background="@drawable/tab_mine_sel"/>

        <TextView
            android:id="@+id/activity_main_nav_msg"
            style="@style/TabBottomTextStyle"
            android:includeFontPadding="false"
            android:text="@string/tab_mine"
            android:textColor="@drawable/tab_tv_color_sel"
            android:textSize="@dimen/font_34"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentTop="true"
        android:background="@color/line_gray_s"/>

</RelativeLayout>
