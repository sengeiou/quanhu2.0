<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comm_item_selector"
    android:padding="@dimen/px44">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/px98"
        android:layout_height="@dimen/px98"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_default_head" />

    <TextView
        android:id="@+id/id_search_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px28"
        android:layout_toRightOf="@+id/img_avatar"
        android:clickable="false"
        android:textColor="@color/font_gray_xl"
        android:textSize="@dimen/font_44" />

</RelativeLayout>