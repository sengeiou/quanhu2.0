<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_pop_white_btn"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px72"
        android:includeFontPadding="false"
        android:textColor="@color/color_f5cd45"
        android:textSize="@dimen/font_54"
        android:textStyle="bold" />

    <TextView
        style="@style/DefaultTvStyle"
        android:layout_marginBottom="@dimen/px72"
        android:layout_marginTop="@dimen/px50"
        android:gravity="left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/px26"
        android:paddingLeft="@dimen/px90"
        android:paddingRight="@dimen/px90"
        android:singleLine="false"
        android:text="@string/private_group_level_tip"
        android:textColor="@color/font_gray_l"
        android:textSize="@dimen/font_46" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px4"
        android:background="@color/color_EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_bottom_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/DefaultTvStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px120"
            android:layout_weight="1"
            android:clickable="true"
            android:text="@string/i_know"
            android:textColor="@color/font_gray_l"
            android:textSize="@dimen/font_46" />

        <View style="@style/line_vertical_gray_s" />

        <TextView
            android:id="@+id/btn_submit"
            style="@style/DefaultTvStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px120"
            android:layout_weight="1"
            android:clickable="true"
            android:text="@string/v3_customer_service"
            android:textColor="@color/font_color_blue"
            android:textSize="@dimen/font_46" />
    </LinearLayout>
</LinearLayout>