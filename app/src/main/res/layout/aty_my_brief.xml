<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F5F5F5">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/ll_my_brief_root"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingTop="@dimen/px30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/id_person_clear"
                android:layout_width="@dimen/px44"
                android:layout_height="@dimen/px44"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px30"
                android:src="@drawable/ic_clear"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/id_person_brief_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/id_person_clear"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="@string/edit_user_introduce"
                android:maxLength="40"
                android:minHeight="@dimen/px360"
                android:paddingBottom="@dimen/px30"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px10"
                android:paddingTop="@dimen/px30"
                android:textColor="@color/black"
                android:textSize="@dimen/font_50"/>


        </RelativeLayout>

    </LinearLayout>
</ScrollView>