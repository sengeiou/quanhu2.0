<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_check_pwd"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px100"
    android:paddingRight="@dimen/px100">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_pop_white_btn"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minEms="10"
            android:padding="@dimen/px70"
            android:text="@string/exit_intr"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/font_52" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2"
            android:background="@color/color_DDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_pop_gray_btn"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/px30"
                android:text="@string/look_again"
                android:textColor="@color/txt_pop_detail"
                android:textSize="@dimen/font_52" />

            <View
                android:layout_width="@dimen/px2"
                android:layout_height="match_parent"
                android:background="@color/color_DDD" />

            <TextView
                android:id="@+id/id_tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/px30"
                android:text="@string/forward_to_make_money"
                android:textColor="@color/txt_pop_blue"
                android:textSize="@dimen/font_52" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>