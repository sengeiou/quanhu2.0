<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_circle_content"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/px30"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_circle_info_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="@dimen/px288"
            android:layout_height="@dimen/px240"
            android:layout_marginRight="@dimen/px56"
            android:layout_marginTop="@dimen/px30"
            android:src="@drawable/ic_default_thumbnail"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_circle_info_title_des_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px30"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/px2"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/font_52" />

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px24"
                android:lineSpacingMultiplier="1.2"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_44"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30">

        <ImageView
            android:id="@+id/iv_circle_1img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px560"

            android:src="@drawable/ic_circle_img1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_circle_3imgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_circle_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/px320"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_circle_img01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_circle_img3" />

                <TextView
                    android:id="@+id/tv_img_nums1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/px8"
                    android:layout_toLeftOf="@+id/ff_xzanwei1"
                    android:background="@drawable/shape_item_circle_videoinfo"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_34"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/ff_xzanwei1"
                    android:layout_width="@dimen/px8"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"></FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_circle_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/px320"
                android:layout_marginLeft="@dimen/px8"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_img_nums2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/px8"
                    android:layout_toLeftOf="@+id/ff_xzanwei2"
                    android:background="@drawable/shape_item_circle_videoinfo"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_34"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/ff_xzanwei2"
                    android:layout_width="@dimen/px8"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"></FrameLayout>

                <ImageView
                    android:id="@+id/iv_circle_img02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_img_nums2"
                    android:src="@drawable/ic_circle_img3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_circle_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/px320"
                android:layout_marginLeft="@dimen/px8"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_circle_img03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_circle_img3" />

                <TextView
                    android:id="@+id/tv_img_nums3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/px8"
                    android:layout_toLeftOf="@+id/ff_xzanwei3"
                    android:background="@drawable/shape_item_circle_videoinfo"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_34"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/ff_xzanwei3"
                    android:layout_width="@dimen/px8"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"></FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/rl_circle_video_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px559"
        android:layout_marginTop="@dimen/px30"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_video_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_video_title"
            android:layout_toRightOf="@+id/tv_video_title"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/px559"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_video_play"
            android:layout_width="@dimen/px125"
            android:layout_height="@dimen/px125"
            android:layout_centerInParent="true"
            android:src="@drawable/pic_video_list_play_new"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_video_title"
            style="@style/DefaultTvStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px98"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_bg_item_video"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/px42"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/font_40"
            android:layout_marginRight="@dimen/font_34"
            android:layout_toLeftOf="@+id/ff_xzanwei"
            android:background="@drawable/video_time"
            android:text="03:00"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_34"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/ff_xzanwei"
            android:layout_width="@dimen/px8"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"></FrameLayout>
    </RelativeLayout>
</LinearLayout>