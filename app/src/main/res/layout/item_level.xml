<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px80"
              android:background="@color/color_f6fbfd"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_level_item_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/app_base_padding"
        android:layout_weight="1"
        android:textSize="@dimen/font_44"
        />

    <TextView
        android:id="@+id/tv_level_item_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/app_base_padding"
        />

    <TextView
        android:id="@+id/tv_level_item_resource"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/app_base_padding"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="@dimen/font_44"
        />
</LinearLayout>
