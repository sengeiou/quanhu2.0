<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <TextView
        android:id="@+id/id_tv_date"
        style="@style/DefaultTvStyle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/id_tv_cost"
        android:gravity="left"
        android:textSize="@dimen/font_44"
        android:textColor="@color/color_000000"
        android:paddingBottom="@dimen/px42"
        android:paddingLeft="@dimen/px30"
        android:paddingRight="@dimen/px30"
        android:paddingTop="@dimen/px42"/>

    <TextView
        android:id="@+id/id_tv_cost"
        style="@style/DefaultTvStyle"
        android:layout_centerInParent="true"
        android:textColor="@color/color_0185FF"
        android:textSize="@dimen/font_44"/>

    <TextView
        android:id="@+id/id_tv_name"
        style="@style/DefaultTvStyle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/px30"
        android:maxLength="8"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_44"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:layout_marginLeft="@dimen/font_40"
        android:layout_marginRight="@dimen/font_40"
        android:layout_alignParentBottom="true"
        android:background="@color/color_EEEEEE"/>

</RelativeLayout>