<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/level_headimg"
        android:layout_width="@dimen/px172"
        android:layout_height="@dimen/px172"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px58"
        />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_headimg"
        android:layout_marginTop="@dimen/px30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cur_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="当前等级"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_44"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/px10"
            android:src="@drawable/level_icon"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="@color/color_0185FF"
            android:textSize="@dimen/font_50"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gourp_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/px30"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成长值"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_38"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20"
            android:text="1799"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_38"
            />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/level_pb"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px40"
        android:layout_below="@+id/gourp_ll"
        android:layout_marginLeft="@dimen/px94"
        android:layout_marginRight="@dimen/px94"
        android:layout_marginTop="@dimen/px94"
        android:background="@color/color_999"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_pb"
        android:layout_marginLeft="@dimen/px72"
        android:layout_marginTop="@dimen/px14"
        android:drawableLeft="@drawable/level_icon"
        android:text="1"
        android:textColor="@color/color_0185FF"
        android:textSize="@dimen/font_50"/>

    <TextView
        android:id="@+id/lv_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/level_pb"
        android:layout_marginRight="@dimen/px72"
        android:layout_marginTop="@dimen/px14"
        android:drawableLeft="@drawable/level_icon"
        android:text="10"
        android:textColor="@color/color_0185FF"
        android:textSize="@dimen/font_50"/>

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px10"
        android:layout_below="@+id/lv_ten"
        android:layout_marginTop="@dimen/px72"
        android:background="@color/color_f5f5f5"></View>

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:layout_marginLeft="@dimen/font_54"
        android:layout_marginTop="@dimen/font_44"
        android:text="成长值明细"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_44"
        />

    <LinearLayout
        android:id="@+id/time_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px116"
        android:layout_below="@+id/detail"
        android:layout_marginLeft="@dimen/font_54"
        android:layout_marginRight="@dimen/font_54"
        android:layout_marginTop="@dimen/font_44"
        android:background="#f6fbfd"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_44"
            android:layout_marginLeft="@dimen/font_44"
            android:text="时间"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_44"
            android:gravity="center"
            android:text="成长值"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/font_44"
            android:layout_marginRight="@dimen/font_44"
            android:text="来源"
            />


    </LinearLayout>
    <ListView
        android:id="@+id/lv_level"
        android:layout_below="@+id/time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</RelativeLayout>