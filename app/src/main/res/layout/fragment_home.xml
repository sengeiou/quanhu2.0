<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/id_homefrg_listview"
        style="@style/DefaultLvStyle"
        android:background="@color/color_F6F8F8"
        android:clipToPadding="false"
        android:divider="@color/color_F4F4F4"
        />
        <ImageView
            android:id="@+id/home_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px50"
            android:layout_marginRight="@dimen/px50"
            android:layout_gravity="right|bottom"
            android:src="@drawable/home_publish"
            />
    </FrameLayout>


</LinearLayout>
