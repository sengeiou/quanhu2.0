<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/upload_btn_height">

        <TextView
            android:id="@+id/tv_upload_pic_local"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upload_btn_height"
            android:background="@drawable/shape_bg_base_sel"
            android:gravity="center"
            android:text="@string/pic_choose_local"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_upload_pic_shoot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upload_btn_height"
            android:layout_marginTop="@dimen/px100"
            android:background="@drawable/shape_bg_base_sel"
            android:gravity="center"
            android:text="@string/pic_shoot"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>
