<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f5f5f5"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="@dimen/px10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px40"
        android:paddingRight="@dimen/px40">

        <TextView
            style="@style/DefaultTvStyle"
            android:layout_marginRight="@dimen/px75"
            android:paddingBottom="@dimen/px48"
            android:paddingTop="@dimen/px48"
            android:text="@string/old_pwd"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/id_et_old_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/input_old_pwd_hint"
            android:maxLength="18"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666"
            android:textCursorDrawable="@drawable/shape_et_course"
            android:textSize="@dimen/font_44"/>

        <ImageView
            android:id="@+id/id_clear_old_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_clear"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:background="@color/color_EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px40"
        android:paddingRight="@dimen/px40">

        <TextView
            style="@style/DefaultTvStyle"
            android:layout_marginRight="@dimen/px75"
            android:paddingBottom="@dimen/px48"
            android:paddingTop="@dimen/px48"
            android:text="@string/new_pwd"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/id_et_new_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/input_new_pwd_hint"
            android:maxLength="18"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666"
            android:textCursorDrawable="@drawable/shape_et_course"
            android:textSize="@dimen/font_44"/>

        <ImageView
            android:id="@+id/id_clear_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_clear"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:background="@color/color_EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px40"
        android:paddingRight="@dimen/px40">

        <TextView
            style="@style/DefaultTvStyle"
            android:layout_marginRight="@dimen/px75"
            android:paddingBottom="@dimen/px48"
            android:paddingTop="@dimen/px48"
            android:text="@string/new_pwd_confirm"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/id_et_new_pwd_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/input_new_pwd_again"
            android:maxLength="18"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_666666"
            android:textCursorDrawable="@drawable/shape_et_course"
            android:textSize="@dimen/font_44"/>

        <ImageView
            android:id="@+id/id_clear_new_pwd_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_clear"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:background="@color/color_EEEEEE"
        android:visibility="gone"/>

    <Button
        android:id="@+id/id_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/px126"
        android:layout_marginRight="@dimen/px126"
        android:layout_marginTop="@dimen/px66"
        android:background="@drawable/shape_bg_blue_sel"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="@dimen/px36"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_50"/>

</LinearLayout>