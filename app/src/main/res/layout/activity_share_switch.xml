<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px144"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px44"
                android:text="@string/share_object"
                android:textColor="@color/font_gray_m"
                android:textSize="@dimen/font_44"/>

            <View style="@style/DefaultHLineStyle"/>

            <RelativeLayout
                android:id="@+id/id_group_chat_rela1"
                style="@style/ContactHeadRelaStyle">

                <ImageView
                    style="@style/ContactHeadImgStyle"
                    android:src="@drawable/ic_default_avatar_team"/>

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px130"
                    android:text="@string/group_chat"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px44"
                    android:src="@drawable/ic_right_arrow"/>

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_remind_dot"
                    android:gravity="center"
                    android:textColor="@color/color_FA726F"
                    android:textSize="@dimen/font_34"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View style="@style/DefaultHLineStyle"/>

            <RelativeLayout
                android:id="@+id/id_group_discuss1"
                style="@style/ContactHeadRelaStyle">

                <ImageView
                    style="@style/ContactHeadImgStyle"
                    android:src="@drawable/ic_default_avatar_team_normal"/>

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px130"
                    android:text="@string/discuss_chat"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px44"
                    android:src="@drawable/ic_right_arrow"/>

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_remind_dot"
                    android:gravity="center"
                    android:textColor="@color/color_FA726F"
                    android:textSize="@dimen/font_34"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View style="@style/DefaultHLineStyle"/>

            <RelativeLayout
                android:id="@+id/id_group_friend1"
                style="@style/ContactHeadRelaStyle">

                <ImageView
                    style="@style/ContactHeadImgStyle"
                    android:src="@drawable/ic_default_avatar_personal"/>

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px130"
                    android:text="@string/good_friend"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px44"
                    android:src="@drawable/ic_right_arrow"/>

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_remind_dot"
                    android:gravity="center"
                    android:textColor="@color/color_FA726F"
                    android:textSize="@dimen/font_34"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_recent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px144"
            android:layout_marginTop="@dimen/px30"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_contacts"
                android:textColor="@color/font_gray_m"
                android:textSize="@dimen/font_44"/>

        </LinearLayout>

        <View style="@style/DefaultHLineStyle"/>

        <com.rz.common.widget.MyListView
            android:id="@+id/id_content_lv"
            style="@style/DefaultLvStyle"
            android:layout_gravity="center"
            android:dividerHeight="0dp"/>
    </LinearLayout>
</ScrollView>