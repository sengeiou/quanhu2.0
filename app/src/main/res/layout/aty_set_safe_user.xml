<View
    android:layout_width="match_parent"
    android:background="@color/color_f5f5f5"
    android:layout_height="@dimen/px30"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px158"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/px30"
        android:paddingRight="@dimen/px30"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/DefaultTvStyle"
                android:text="@string/name"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_50"/>

            <EditText
                android:id="@+id/id_your_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:hint="@string/hint_enter_name"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/font_gray_m"
                android:textColorHint="@color/font_gray_s"
                android:textSize="@dimen/font_44"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/DefaultHLineStyle.Divider"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px158"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/px30"
        android:paddingRight="@dimen/px30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/DefaultTvStyle"
                android:text="@string/id_card"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_50"/>

            <EditText
                android:id="@+id/id_idcard_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:hint="@string/hint_enter_id_card"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/font_gray_m"
                android:textColorHint="@color/font_gray_s"
                android:textSize="@dimen/font_44"/>
        </LinearLayout>

    </LinearLayout>

    <!--<View style="@style/DefaultHLineStyle.Divider"/>-->

    <TextView
        android:id="@+id/id_remind_error_txt"
        style="@style/DefaultTvStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px250"
        android:textColor="@color/color_ff0000"
        android:textSize="@dimen/font_44"/>

    <Button
        android:id="@+id/id_save_userinfo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px125"
        android:layout_marginRight="@dimen/px125"
        android:layout_marginTop="@dimen/px30"
        android:background="@drawable/shape_bg_blue_sel"
        android:padding="@dimen/px30"
        android:singleLine="true"
        android:text="@string/match"
        android:textColor="@color/white"
        android:textSize="@dimen/px50"/>
</LinearLayout>