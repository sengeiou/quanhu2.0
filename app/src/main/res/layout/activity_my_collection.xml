<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.rz.circled.widget.SwipyRefreshLayoutBanner
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/lv_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:divider="@color/color_f5f5f5"
        ></ListView>

    </com.rz.circled.widget.SwipyRefreshLayoutBanner>
    <Button
        android:id="@+id/btn_del"
        android:layout_gravity="bottom|center"
        android:layout_width="@dimen/px748"
        android:background="@drawable/collection_bg"
        android:text="删除"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/font_40"
        android:textColor="@color/white"
        android:layout_height="@dimen/px98"/>
    </FrameLayout>

</LinearLayout>