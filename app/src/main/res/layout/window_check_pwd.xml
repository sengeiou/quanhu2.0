<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_pop_white_btn"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/DefaultTvStyle"
            android:paddingBottom="@dimen/px36"
            android:paddingTop="@dimen/px36"
            android:text="@string/safe_to_input" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px3"
            android:layout_marginLeft="@dimen/px15"
            android:layout_marginRight="@dimen/px15"
            android:background="@color/color_f5f5f5" />

        <com.rz.rz_rrz.widget.password.GridPasswordView
            android:id="@+id/id_check_pay_pw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px130"
            android:layout_marginBottom="@dimen/px74"
            android:layout_marginLeft="@dimen/px68"
            android:layout_marginRight="@dimen/px68"
            android:layout_marginTop="@dimen/px74"
            android:gravity="center_vertical"
            app:gpvGridColor="#ffffff"
            app:gpvLineColor="#cccccc"
            app:gpvLineWidth="@dimen/px2"
            app:gpvPasswordLength="6"
            app:gpvPasswordTransformation="ï¼Š"
            app:gpvPasswordType="numberPassword"
            app:gpvTextColor="@color/textColorPrimary"
            app:gpvTextSize="25sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px3"
        android:background="@color/color_f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_pop_gray_btn"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_cancel"
            style="@style/DefaultTvStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/px36"
            android:text="@string/cancel" />

        <View
            android:layout_width="@dimen/px2"
            android:layout_height="match_parent"
            android:background="@color/color_f5f5f5" />

        <TextView
            android:id="@+id/id_tv_confirm"
            style="@style/DefaultTvStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/px36"
            android:text="@string/confirm" />

    </LinearLayout>
</LinearLayout>