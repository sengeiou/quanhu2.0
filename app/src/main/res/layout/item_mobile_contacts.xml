<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comm_item_selector">

    <TextView
        android:id="@+id/id_alpha_txt"
        style="@style/DefaultTvStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_contacts_alpha"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/px15"
        android:paddingLeft="@dimen/px44"
        android:paddingTop="@dimen/px15"
        android:textColor="@color/color_74" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_alpha_txt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_friends_img"
            android:layout_width="@dimen/px108"
            android:layout_height="@dimen/px108"
            android:layout_margin="10dp"
            android:layout_marginLeft="@dimen/px30"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="@dimen/px30">

            <TextView
                android:id="@+id/id_friends_name"
                style="@style/DefaultTvStyle"
                android:textSize="@dimen/font_50" />

            <TextView
                android:id="@+id/id_friends_brief"
                style="@style/DefaultTvStyle"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_40" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_friends_state"
            style="@style/DefaultTvStyle"
            android:layout_marginRight="@dimen/px80"
            android:paddingBottom="@dimen/px15"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:paddingTop="@dimen/px15"
            android:textSize="@dimen/font_38" />
    </LinearLayout>
</RelativeLayout>