<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px44"
    android:paddingRight="@dimen/px44">

    <TextView
        android:id="@+id/tv_time"
        style="@style/NewsTimeTipTvStyle"
        tool:text="09:23" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_news_content_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px10"
        android:paddingLeft="@dimen/px8"
        android:paddingRight="@dimen/px8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px58"
            android:paddingLeft="@dimen/px44"
            android:paddingRight="@dimen/px44"
            android:paddingTop="@dimen/px44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/px64"
                    android:layout_height="@dimen/px64"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_default_avatar_small"
                    app:riv_mutate_background="true"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:lines="1"
                    android:textColor="@color/font_gray_m"
                    android:textSize="@dimen/font_44"
                    tool:text="基督教" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px30"
                android:textColor="@color/font_gray_xl"
                android:textSize="@dimen/font_44"
                tool:text="充值成功" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px172"
                android:layout_marginTop="@dimen/px28"
                android:background="@color/color_F4F4F4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/px172"
                    android:layout_height="@dimen/px172"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_default_bg" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/px12"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/px44"
                    android:textColor="@color/font_gray_m"
                    android:textSize="@dimen/font_40"
                    tool:text="这里的是内容" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/line_horizontal_gray_s" />

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px26"
            android:layout_marginLeft="@dimen/px44"
            android:layout_marginTop="@dimen/px20"
            android:includeFontPadding="false"
            android:textColor="@color/font_gray_s"
            android:textSize="@dimen/font_34"
            tool:text="来自 什么圈呢" />
    </LinearLayout>
</LinearLayout>