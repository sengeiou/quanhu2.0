<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:paddingTop="@dimen/title_bar_padding_top"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/all_circle__title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/app_base_padding"
            android:paddingRight="@dimen/px40"
            android:src="@mipmap/icon_arrow_left_gray"/>
        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/baiquanfencheng"
            android:textStyle="bold"
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_title_size"/>
        <TextView
            android:id="@+id/all_circle_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="@dimen/font_44"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_44"
          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line_gray_s"/>

</LinearLayout>