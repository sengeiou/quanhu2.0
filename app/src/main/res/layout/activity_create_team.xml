<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_create_team_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_F8F8F8"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px513"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_create_team_icon"
            android:layout_width="@dimen/px217"
            android:layout_height="@dimen/px217"
            android:layout_marginTop="@dimen/px110"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_create_team_add"/>

        <TextView
            android:id="@+id/tv_create_team_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40"
            android:text="@string/create_team_add_icon"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_44"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px158"
        android:layout_marginTop="@dimen/px30"
        android:background="@color/white"
        android:padding="@dimen/px42">

        <TextView
            android:id="@+id/tv_create_team_name_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px5"
            android:text="0/12"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_38"/>

        <EditText
            android:id="@+id/et_create_team_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_create_team_name_num"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:hint="@string/create_team_add_name"
            android:maxLength="12"
            android:maxLines="1"
            android:textSize="@dimen/font_50"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/line_horizontal_gray_s"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"/>

        <EditText
            android:id="@+id/et_create_team_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px42"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:hint="@string/create_team_add_info"
            android:maxLength="50"
            android:textSize="@dimen/font_50"/>

        <TextView
            android:id="@+id/tv_create_team_info_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/et_create_team_info"
            android:layout_marginRight="@dimen/px42"
            android:paddingBottom="@dimen/px30"
            android:paddingLeft="@dimen/px5"
            android:text="0/50"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_38"/>

    </RelativeLayout>


</LinearLayout>
