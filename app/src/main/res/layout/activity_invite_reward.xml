<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px44">

        <ImageView
            android:id="@+id/iv_reward"
            android:layout_width="@dimen/px290"
            android:layout_height="@dimen/px200"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/px52"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_invite_reward" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/px52"
            android:text="邀请好友一起玩圈乎"
            android:textColor="@color/font_gray_xl"
            android:textSize="@dimen/font_60"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_reward" />


        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/px44"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv2"
                android:layout_alignTop="@+id/tv2"
                android:gravity="center_vertical"
                android:text="和好友一起得"
                android:textColor="@color/font_gray_m"
                android:textSize="@dimen/font_44" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv1"
                android:text="1000积分"
                android:textColor="@color/color_F5CD45"
                android:textSize="@dimen/font_52"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv2"
                android:layout_alignRight="@+id/tv2"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="@dimen/px14"
                android:src="@mipmap/ic_san" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_bg_invite_reward"
            android:gravity="center"
            android:paddingBottom="@dimen/px32"
            android:paddingLeft="@dimen/px80"
            android:paddingRight="@dimen/px80"
            android:paddingTop="@dimen/px32"
            android:text="邀请越多，奖励越多！"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_48"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.rz.circled.widget.MyGridView
            android:id="@+id/gridview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px36"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:paddingLeft="@dimen/px80"
            android:paddingRight="@dimen/px80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px44"
            android:layout_marginLeft="@dimen/px44"
            android:layout_marginRight="@dimen/px44"
            android:layout_marginStart="@dimen/px44"
            android:layout_marginTop="@dimen/px36"
            android:background="@drawable/shape_invite_reward_tip_bg"
            android:orientation="vertical"
            android:padding="@dimen/px44"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_width="@dimen/px48"
                    android:layout_height="@dimen/px48"
                    android:background="@drawable/shape_round_999999"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_44" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px30"
                    android:lineSpacingMultiplier="1.3"
                    android:text="直接点击分享邀请，将您的专属邀请页分享出去。"
                    android:textColor="@color/font_gray_l"
                    android:textSize="@dimen/font_44" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/px30"
                android:orientation="horizontal">

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_width="@dimen/px48"
                    android:layout_height="@dimen/px48"
                    android:background="@drawable/shape_round_999999"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_44" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px30"
                    android:lineSpacingMultiplier="1.3"
                    android:text="好友通过专属页面下载圈乎APP，注册成为圈乎新用户。"
                    android:textColor="@color/font_gray_l"
                    android:textSize="@dimen/font_44" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/px30"
                android:orientation="horizontal">

                <TextView
                    style="@style/DefaultTvStyle"
                    android:layout_width="@dimen/px48"
                    android:layout_height="@dimen/px48"
                    android:background="@drawable/shape_round_999999"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_44" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px30"
                    android:lineSpacingMultiplier="1.3"
                    android:text="每当成功邀请一个新用户，您和受邀新用户均可获得500积分！"
                    android:textColor="@color/font_gray_l"
                    android:textSize="@dimen/font_44" />
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>