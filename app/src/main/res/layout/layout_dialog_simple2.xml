<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_pop_white_btn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_white_bg_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_simple2_msg"
                style="@style/DefaultTvStyle"
                android:layout_centerInParent="true"
                android:maxLines="4"
                android:padding="@dimen/px118"
                android:text="@string/pay_pw_success"/>

            <ImageView
                android:id="@+id/id_chear_dialog_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/px30"
                android:background="@drawable/ic_clear"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_cccccc"/>

        <RelativeLayout
            android:id="@+id/dialog_simple2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_blr_round"
            android:clickable="true"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/dialog_simple2_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:checked="false"/>

            <TextView
                android:id="@+id/dialog_simple2_btn_txt"
                style="@style/DefaultTvStyle"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dialog_simple2_cb"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/px35"
                android:paddingTop="@dimen/px35"
                android:text="@string/open_small_pay_no_psw"
                android:textColor="@color/textColorPrimary"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>


