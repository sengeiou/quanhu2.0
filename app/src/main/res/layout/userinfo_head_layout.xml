<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/topbar_blue_bottom"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/avatar_layout"
                android:layout_width="@dimen/px216"
                android:layout_height="@dimen/px216"
                android:background="@drawable/shape_circle"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="@dimen/px200"
                    android:layout_height="@dimen/px200"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px42"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px28"
            >

            <TextView
                android:id="@+id/user_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定投界的一只牛"
                android:textColor="@color/white"
                android:textSize="@dimen/font_48"
                />

            <TextView
                android:id="@+id/level_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.10"
                android:textSize="@dimen/font_46"
                android:textColor="@color/color_yellow_level"
                android:layout_marginLeft="@dimen/px36"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/sign_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好看的皮囊千篇一律，有趣的灵魂万里挑一"
            android:textSize="@dimen/font_34"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px20"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px30"
            android:layout_marginBottom="@dimen/px44"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_famous"
                />

            <TextView
                android:id="@+id/user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="互联网达人"
                android:textSize="@dimen/font_38"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/px18"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>