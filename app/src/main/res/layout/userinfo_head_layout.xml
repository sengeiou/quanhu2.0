<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/topbar_blue_bottom"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/avatar_layout"
                android:layout_width="@dimen/px216"
                android:layout_height="@dimen/px216"
                android:background="@drawable/shape_circle"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/px10"
                >

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="@dimen/px188"
                    android:layout_height="@dimen/px188"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    />

            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px42"
                android:visibility="gone"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px18"
            >

            <TextView
                android:id="@+id/user_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/font_48"
                />

            <TextView
                android:id="@+id/level_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/font_46"
                android:textColor="@color/color_yellow_level"
                android:layout_marginLeft="@dimen/px36"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/sign_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/font_34"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px10"
            />

        <LinearLayout
            android:id="@+id/famous_role_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px20"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_famous"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gggggg"
                android:textSize="@dimen/font_38"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/px18"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>