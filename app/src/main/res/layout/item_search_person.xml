<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px260"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/px165"
        android:layout_height="@dimen/px165"
        android:layout_marginLeft="@dimen/font_34">

        <ImageView
            android:id="@+id/iv_search_person"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_search_person_talent"
            android:layout_width="@dimen/px50"
            android:layout_height="@dimen/px50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_talent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px165"
        android:layout_marginLeft="@dimen/font_34"
        >

        <TextView
            android:id="@+id/tv_search_person_lv"
            android:layout_width="@dimen/px144"
            android:layout_height="@dimen/px50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px34"
            android:layout_marginTop="@dimen/px20"
            android:background="@drawable/famous_level_bg"
            android:gravity="center"
            android:text="LV 1"
            android:textColor="@color/white"
            android:textSize="@dimen/px25"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_search_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/px50"
            android:layout_toLeftOf="@id/tv_search_person_lv"
            android:maxLines="1"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_50"/>

        <TextView
            android:id="@+id/tv_search_person_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/px50"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/font_gray_m"
            android:textSize="@dimen/font_40"/>

    </RelativeLayout>

</LinearLayout>
