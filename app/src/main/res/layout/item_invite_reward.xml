<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px144"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/app_base_padding"
    android:paddingRight="@dimen/app_base_padding">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_base_padding"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/font_gray_xl"
        android:textSize="@dimen/font_44" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_gray_l"
        android:textSize="@dimen/font_44" />
</LinearLayout>