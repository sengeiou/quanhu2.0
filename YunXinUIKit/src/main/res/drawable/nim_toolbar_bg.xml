<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the line -->
    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp" />

            <solid android:color="#f9f9f9" />
        </shape>
    </item>
    <!-- This is the main color -->
    <item>
        <shape>
            <solid android:color="#f9f9f9" />

            <corners android:radius="0dip" />

            <stroke
                android:width="1dip"
                android:color="#e5e5e5" />
        </shape>
    </item>

</layer-list>