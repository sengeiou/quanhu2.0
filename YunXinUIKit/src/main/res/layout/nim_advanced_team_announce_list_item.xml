<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px44"
        android:layout_marginRight="@dimen/px44"
        android:layout_marginTop="@dimen/px44"
        android:background="@drawable/rolle_white"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px40"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginTop="@dimen/px50">

            <TextView
                android:id="@+id/announce_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="announce_title"
                android:textColor="@color/black"
                android:textSize="@dimen/font_52" />


            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/announce_title"
                android:text="team name"
                android:textColor="@color/font_gray_m"
                android:textSize="@dimen/font_44"
                android:layout_below="@+id/announce_title" />


            <TextView
                android:id="@+id/announce_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/team_name"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/team_name"
                android:textColor="@color/font_gray_m"
                android:textSize="@dimen/font_44" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginRight="@dimen/px10"
            android:background="@color/color_split_line_f4f4f4" />

        <TextView
            android:id="@+id/announce_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px40"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginTop="@dimen/px40"
            android:minLines="3"
            android:textColor="@color/black"
            android:textSize="@dimen/font_52" />
    </LinearLayout>

</LinearLayout>
