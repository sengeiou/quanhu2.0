<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/nim_message_item_text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone|email|web"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/px20"
        android:includeFontPadding="false"
        android:maxWidth="@dimen/max_text_bubble_width"
        android:minHeight="@dimen/avatar_size_in_session"
        android:textColor="@color/font_gray_xl"
        android:textColorLink="@android:color/white"
        android:textSize="@dimen/font_52" />
</LinearLayout>