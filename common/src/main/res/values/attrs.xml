<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundProgressBar">
        <attr name="_roundColor" format="color"/>
        <attr name="_roundProgressColor" format="color"/>
        <attr name="_roundWidth" format="dimension"/>
        <attr name="_textColor" format="color"/>
        <attr name="_textSize" format="dimension"/>
        <attr name="_max" format="integer"/>
        <attr name="_textIsDisplayable" format="boolean"/>
        <attr name="_style">
            <enum name="_STROKE" value="0"/>
            <enum name="_FILL" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="SwipyRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>


</resources>
