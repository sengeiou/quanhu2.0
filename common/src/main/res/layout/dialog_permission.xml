<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_permission_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px88"
        android:layout_marginLeft="@dimen/px120"
        android:layout_marginRight="@dimen/px120"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px90">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_permission_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px54"
            android:layout_marginTop="@dimen/px70"
            android:gravity="center"
            android:paddingLeft="@dimen/px44"
            android:paddingRight="@dimen/px44"
            android:textColor="@color/black"
            android:textSize="@dimen/font_44"/>

        <TextView
            android:id="@+id/tv_permission_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/px44"
            android:paddingRight="@dimen/px44"
            android:textColor="@color/black"
            android:textSize="@dimen/font_44"/>


        <TextView
            android:id="@+id/tv_permission_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px110"
            android:paddingBottom="@dimen/px20"
            android:paddingLeft="@dimen/px170"
            android:paddingRight="@dimen/px170"
            android:paddingTop="@dimen/px20"
            android:textColor="@color/white"
            android:textSize="@dimen/font_52"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/tv_permission_dialog_cancel"
        android:layout_width="@dimen/px120"
        android:layout_height="@dimen/px120"
        android:layout_below="@+id/ll_permission_dialog"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
